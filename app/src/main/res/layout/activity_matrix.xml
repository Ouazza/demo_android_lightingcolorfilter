<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <ImageView
            android:layout_gravity="center_horizontal"
            android:id="@+id/image_background"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:layout_height="250dp"
            android:src="@drawable/colorful_flower"/>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_marginTop="5dp"
                  android:paddingStart="16dp"
                  android:paddingEnd="16dp">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Saturation"/>
        <SeekBar
                android:id="@+id/seek_saturation"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:min="0"
                android:max="510"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Scale"/>
        <SeekBar
                android:id="@+id/seek_scale"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:min="0"
                android:max="510"/>

    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_marginTop="5dp"
                  android:paddingStart="16dp"
                  android:paddingEnd="16dp">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="S.Red"/>
        <SeekBar
                android:id="@+id/seek_scale_red"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:min="0"
                android:max="510"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="S.Green"/>
        <SeekBar
                android:id="@+id/seek_scale_green"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:min="0"
                android:max="510"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="S.Blue"/>
        <SeekBar
                android:id="@+id/seek_scale_blue"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:min="0"
                android:max="510"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_marginTop="5dp"
                  android:paddingStart="16dp"
                  android:paddingEnd="16dp">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="R.Red"/>
        <SeekBar
                android:id="@+id/seek_rotate_red"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:min="0"
                android:max="360"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="R.Green"/>
        <SeekBar
                android:id="@+id/seek_rotate_green"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:min="0"
                android:max="360"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="R.Blue"/>
        <SeekBar
                android:id="@+id/seek_rotate_blue"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:min="0"
                android:max="360"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_marginTop="5dp"
                  android:paddingStart="16dp"
                  android:paddingEnd="16dp">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Binary"/>
        <SeekBar
                android:id="@+id/seek_binary"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:min="0"
                android:max="255"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Black White"/>
        <SeekBar
                android:id="@+id/seek_black_white"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:min="0"
                android:max="255"/>

    </LinearLayout>

    <GridLayout
            android:id="@+id/radio_style"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="3">
        <RadioButton
                android:id="@+id/radio_original"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Original"/>
        <RadioButton
                android:id="@+id/radio_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gray"/>
        <RadioButton
                android:id="@+id/radio_gray_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gray on Red"/>
        <RadioButton
                android:id="@+id/radio_gray_green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gray on Green"/>
        <RadioButton
                android:id="@+id/radio_gray_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gray on Blue"/>
        <RadioButton
                android:id="@+id/radio_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Red"/>
        <RadioButton
                android:id="@+id/radio_green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Green"/>
        <RadioButton
                android:id="@+id/radio_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blue"/>
        <RadioButton
                android:id="@+id/radio_inverse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inverse"/>
        <RadioButton
                android:id="@+id/radio_binary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Binary"/>
        <RadioButton
                android:id="@+id/radio_black_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Black White"/>
        <RadioButton
                android:id="@+id/radio_black_white_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Black White Light"/>
        <RadioButton
                android:id="@+id/radio_gbr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Green Blue Red"/>
        <RadioButton
                android:id="@+id/radio_brg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blue Red Green"/>
        <RadioButton
                android:id="@+id/radio_yuv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RGB to YUV"/>
    </GridLayout>

</LinearLayout>
